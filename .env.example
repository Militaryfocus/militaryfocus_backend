# =============================================================================
# КОНФИГУРАЦИЯ ENTERPRISE СИСТЕМЫ ПАРСИНГА С ИИ
# =============================================================================

# Django настройки
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# База данных
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/military_content
# Или для SQLite: sqlite:///db.sqlite3

# Redis (кэширование и очереди)
REDIS_URL=redis://localhost:6379/0

# OpenAI API для ИИ обработки
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=60

# Настройки парсинга
MIN_QUALITY_SCORE=60.0
MIN_UNIQUENESS_SCORE=70.0
MAX_CONCURRENT_PARSING=3
PARSING_DELAY_SECONDS=2

# Настройки кэширования
CACHE_DEFAULT_TIMEOUT=3600
CACHE_API_TIMEOUT=300
CACHE_PARSING_TIMEOUT=900

# Система метрик
METRICS_ENABLED=True
PROMETHEUS_PORT=9090
GRAFANA_PASSWORD=admin

# Webhook настройки
WEBHOOK_TIMEOUT=30
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=60

# Backup настройки
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1

# Email настройки (для уведомлений)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True

# Telegram Bot (для уведомлений)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Sentry (мониторинг ошибок)
SENTRY_DSN=your-sentry-dsn-here

# Настройки безопасности
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Настройки производительности
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120
CELERY_WORKER_CONCURRENCY=2

# Логирование
LOG_LEVEL=INFO
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Мониторинг
HEALTH_CHECK_ENABLED=True
METRICS_COLLECTION_INTERVAL=60
ALERT_CHECK_INTERVAL=300

# =============================================================================
# ИНСТРУКЦИИ ПО НАСТРОЙКЕ
# =============================================================================

# 1. Скопируйте этот файл как .env:
#    cp .env.example .env

# 2. Замените все значения на реальные

# 3. Для продакшена обязательно измените:
#    - SECRET_KEY (сгенерируйте новый)
#    - DEBUG=False
#    - OPENAI_API_KEY (ваш ключ)
#    - DATABASE_URL (продакшен БД)
#    - ALLOWED_HOSTS (ваш домен)

# 4. Для полной функциональности настройте:
#    - Redis для кэширования
#    - PostgreSQL для продакшен БД
#    - S3 для бэкапов
#    - Sentry для мониторинга ошибок

# =============================================================================